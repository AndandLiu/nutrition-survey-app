<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignUpActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="728dp"
        android:layout_height="267dp"
        android:layout_marginBottom="1dp"
        android:alpha="0.1"
        android:rotation="140"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:color/holo_green_light" />

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="363dp"
            android:layout_height="431dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="6dp"
            android:orientation="vertical"
            app:layout_constrainedHeight="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/userSignUpTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp">

        <EditText
                android:id="@+id/userFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:ems="10"
                android:hint="Enter Your First Name"
                android:inputType="textPersonName"/>

        <EditText
                android:id="@+id/userLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:ems="10"
                android:hint="Enter Your Last Name"
                android:inputType="textPersonName"/>

        <EditText
                android:id="@+id/userSignUpEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:ems="10"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"/>

        <EditText
                android:id="@+id/userSignUpPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:ems="10"
                android:hint="Choose a Password"
                android:inputType="textPassword"/>

        <Button
            android:id="@+id/userSignUpButtonSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:onClick="registerUser"
            android:text="Sign Up"
            android:textAlignment="center" />
        <Button
                android:id="@+id/userSignUpButtonSignIn"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:onClick="openSignInPage"
                android:text="Already have an account? Log In here "
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="460dp"/>

    </LinearLayout>

    <TextView
            android:id="@+id/userSignUpTextView"
            android:layout_width="183dp"
            android:layout_height="46dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="12dp"
            android:text="Registration"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"/>

    

</android.support.constraint.ConstraintLayout>