<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.WelcomeActivity">


    <Button
            android:id="@+id/profileLogoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_marginTop="447dp"
            android:layout_marginEnd="148dp"
            android:layout_marginBottom="16dp"
            android:onClick="logoutProfile"
            android:text="Sign out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/trackCo2ForTodayBtn"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="231dp"
            android:onClick="trackCo2ForToday"
            android:text="Track Co2e for Today"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="172dp"
            app:layout_constraintBottom_toTopOf="@+id/profileLogoutBtn"/>

    <Button
            android:id="@+id/pledgeBtn"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginTop="231dp"
            android:layout_marginEnd="16dp"
            android:onClick="goToPledgePage"
            android:text="View Pledge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="172dp"
            app:layout_constraintBottom_toTopOf="@+id/profileLogoutBtn" android:textSize="10sp"/>

</android.support.constraint.ConstraintLayout>